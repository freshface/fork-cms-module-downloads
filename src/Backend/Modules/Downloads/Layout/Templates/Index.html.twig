{% extends '/Layout/Templates/base.html.twig' %}

{% block actionbar %}
  <div class="btn-toolbar pull-right">
    <div class="btn-group" role="group">
       {{ macro.buttonIcon( geturl('add'), 'plus-square', 'lbl.Add'|trans|ucfirst) }}
    </div>
  </div>
{% endblock %}

{% block content %}



        <div class="row fork-module-content">
        <div class="col-md-12">
          {% form filter %}
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="row">

                 {% if categories %}
                <div class="col-md-6">

                  <div class="form-group">
                    <label>{{ 'lbl.Categories'|trans|ucfirst }}</label>

                    <div class="dropdown">
                      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        {{ 'lbl.Select'|trans|ucfirst }}
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                          {% for item in categories %}
                            <li class="checkbox">
                             <a href="#"><label for="{{ item.id }}">{{ item.chkCategories | raw }} {{ item.label|ucfirst }}</label></a>
                            </li>
                          {% endfor %}
                      </ul>
                    </div>

                  </div>
                </div>
                {% endif %}
                <div class="col-md-6">

                  <div class="form-group">
                    <label for="value" class="control-label">
                      {{ 'lbl.Value'|trans|ucfirst }}
                    </label>
                    {% form_field value %} {% form_field_error value %}
                  </div>
                </div>
              </div>
            </div>
            <div class="panel-footer">
              <div class="btn-toolbar">
                <div class="btn-group pull-right">
                  <button id="search" class="btn btn-primary" type="submit" name="search">
                    <span class="fa fa-refresh"></span>&nbsp;
                    {{ 'lbl.UpdateFilter'|trans|ucfirst }}
                  </button>
                </div>
              </div>
            </div>
          </div>
          {% endform %}
        </div>
      </div>



    {% if dataGridDownloadsDraft %}
    <div class="row">
      <div class="col-md-12">
        <div class="content-block content-block-pb">
          <div class="content-title">
            <p>{{ 'lbl.Drafts'|trans|ucfirst }}</p>
          </div>
          <div class="table-responsive">
            {{ dataGridDownloadsDraft|raw }}
          </div>
        </div>
      </div>
    </div>
  {% endif %}

   {% if dataGridDownloads %}
    <div class="row">
      <div class="col-md-12">
        <div class="content-block content-block-pb">
          <div class="content-title">
            <p>{{ 'lbl.PublishedDownloads'|trans|ucfirst }}</p>
          </div>
          <div class="table-responsive">
            {{ dataGridDownloads|raw }}
          </div>
        </div>
      </div>
    </div>
  {% endif %}

  {% if  not dataGridDownloads  and  not dataGridDownloadsDraft %}
    <div class="row fork-module-content">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <p>{{ 'msg.NoItems'|trans }}</p>
          </div>
        </div>
      </div>
    </div>
  {% endif %}

{% endblock %}
